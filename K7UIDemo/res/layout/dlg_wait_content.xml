<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    >
    
    <FrameLayout 
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="3.5"
        >
        
		<ProgressBar 
    		android:id="@+id/dlg_wait_pb"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_gravity="center"
    		android:indeterminate="true"
    		android:indeterminateOnly="true"
    		android:background="@drawable/tran_bk"
    		android:indeterminateDrawable="@drawable/pb_waiting"
			>
		</ProgressBar>
		
	</FrameLayout>
	
	<TextView 
        android:id="@+id/dlg_wait_message"
    	android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="6.5"
    	android:layout_marginLeft="@dimen/dlg_wait_space"
    	android:gravity="center"
    	android:text="@string/loading"
    	android:textColor="@color/dlg_wait_text_color"
    	android:textSize="@dimen/dlg_wait_text_size"
    	android:textStyle="bold"
    	>
    </TextView>
	
</LinearLayout>